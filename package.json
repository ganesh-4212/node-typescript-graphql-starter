{
  "name": "typescript-graphql-starter",
  "version": "0.0.1",
  "description": "Boiler-plate code to get started with Nodejs, Mongoose, Typescript and GraphQL",
  "main": "src/main.ts",
  "scripts": {
    "test": "npm test",
    "docs": "typedoc src/",
    "start": "node --inspect=5858 -r ts-node/register ./src/main.ts",
    "start:watch": "nodemon",
    "serve": "node dist/server.js",
    "prettify": "prettier --write src/**/*.ts src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ganesh-4212/node-typescript-graphql-starter.git"
  },
  "author": "Ganesh Poojary <ganesh4212@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ganesh-4212/node-typescript-graphql-starter/issues"
  },
  "homepage": "https://github.com/ganesh-4212/node-typescript-graphql-starter#readme",
  "keywords": [
    "nodejs",
    "typescript",
    "mongoose",
    "mongodb",
    "graphql",
    "apollo-server",
    "nodemon"
  ],
  "dependencies": {
    "@types/graphql": "^14.2.3",
    "@types/mongoose": "^5.5.9",
    "apollo-server": "^2.25.3",
    "graphql": "^14.4.2",
    "mongoose": "^5.6.6",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4",
    "typedi": "^0.8.0",
    "typegoose": "^5.8.1"
  },
  "devDependencies": {
    "@types/node": "^12.0.12",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.2"
  }
}
